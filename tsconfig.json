{
  "compilerOptions": {
    "target": "es5",                       // Transpile to ES5 for compatibility
    "lib": ["es6", "dom"],                 // Use ES6 and DOM libraries
    "allowJs": true,                       // Allow JavaScript files to be compiled
    "jsx": "react-native",                 // Set JSX to be compatible with React Native
    "moduleResolution": "node",            // Resolve modules like Node.js does
    "strict": true,                        // Enable all strict type-checking options
    "esModuleInterop": true,               // Enable compatibility with non-ESM modules
    "skipLibCheck": true,                  // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing of filenames
    "resolveJsonModule": true              // Allow importing JSON modules
  },
  "include": [
    "src/**/*",                            // Include all files in the src directory
    "views/**/*"                           // Include all files in the views directory
  ],
  "exclude": [
    "node_modules"                         // Exclude the node_modules directory
  ]
}
